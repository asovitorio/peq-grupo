<%-include('../partials/head-system.ejs')%>
<main class="contaner">
    <label for="menu-sanduiche" id="label-sanduiche"> <i class="fas fa-bars"></i></label>
    <div class="main">
        <input type="checkbox" id="menu-sanduiche">
        <aside class="" id="menu">
            <nav id="painel-btn">
                <div id="foto-profile"><img src="/images/profiles/<%=usuario.avatar %>" alt="foto de perfil"
                        class="img-thumbnail">
                </div>
                <label class="perfil-usuario" for=""><b> <%=usuario.nome %></b><br> <span
                        class="badge <%=usuario.status==1?"badge-secondary":"badge-info"%>" style="padding: 2px;">Status
                        <span class="badge badge-light">
                            <%=usuario.status==1?"ADM":'USER'%></label>
                </span>
                </span>
                <hr>
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="" data-toggle="pill" href="#usuario" role="tab"
                        aria-controls="v-pills-home" aria-selected="true"> <i class='fas fa-user-cog'
                            style='font-size:15px'> Usuários</i></a>
                    <a class="nav-link" id="menu-peq-grupo" data-toggle="pill" href="#pequeno-grupo" role="tab"
                        aria-controls="v-pills-profile" aria-selected="false"><i class='fas fa-users'
                            style='font-size:15px'> P. Grupos</i></a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab"
                        aria-controls="v-pills-messages" aria-selected="false"><i class='fas fa-pray'
                            style='font-size:15px'> Relatorio</i></a>
                    <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab"
                        aria-controls="v-pills-settings" aria-selected="false"><i class='fas fa-bible'
                            style='font-size:15px'> Lições</i></a>
                </div>
                <div id="btn-add-usuario" class="btn-add-peq-grupo"><button type="button" data-toggle="modal"
                        data-target="#modal-add-usuario"><i class='fas fa-user-plus'></i></button></div>
                <div id="btn-add-peq-grupo" class="btn-add-peq-grupo"><button type="button" data-toggle="modal"
                        data-target="#modal-add-peq-grupo"><i class='fas fa-users'><b>+</b></i></button></div>
                <div id="btn-add-licao" class="btn-add-peq-grupo"><button type="button" data-toggle="modal"
                        data-target="#modal-add-peq-grupo"><i class='fas fa-bible'><b>+</b></i></button></div>
            </nav>
        </aside>
        <article class="" id="corpo">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="usuario" role="tabpanel"
                    aria-labelledby="v-pills-home-tab">
                    <div class="corpo-titulo"><i class='fas fa-user-cog' style='font-size:24px'> Usuários</i></div>
                    <br>
                    <div class="table-overflow row">
                        <div class=" col-sm-12">
                            <table class="table table-striped" id="tabelas">
                                <thead id="cabecalho-usuario">
                                    <tr>
                                        <th scope="col">Image</th>
                                        <th scope="col">Nome</th>
                                        <th class="col-email" scope="col">Email</th>
                                        <th scope="col">Ação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%resposta.forEach(element=>{%>
                                    <tr>
                                        <td class="img-table">
                                            <div id="avatar-tabela"><img
                                                    src="/images/profiles/<%=element.pessoas.image%>" width="40px"
                                                    alt="">
                                            </div>
                                        </td>
                                        <td><%=element.pessoas.nome%></td>
                                        <td class="col-email"><%=element.email%></td>
                                        <td>
                                            <div class="button-acao">
                                                <span
                                                    class="badge acao <%=element.status==1?"badge-secondary":element.status==2?"badge-info":"badge-danger"%>"
                                                    style="padding: 2px; "><%=element.status==1?"ADM":element.status==2?"USER":"INAT"%>
                                                    <span class="badge badge-light">
                                                        <a href="system/visualizar-usuario/<%=element.id%>"
                                                            class="btn btn-light delete-usuario"><i
                                                                class='far fa-eye text-info'
                                                                style='font-size:20px'></i></a>
                                                    </span>
                                                </span>
                                            </div>
                                        </td>
                                    </tr>
                                    <%});%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- grupo -->
                <div class="tab-pane fade" id="pequeno-grupo" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                    <div class="corpo-titulo"><i class='fas fa-users' style='font-size:24px'> P. Grupos</i></div>
                    <br>
                    <div class="row grupos">
                    <% grupos.forEach(grupo => { %>
                    <div class="col-sm-3 card-grupo">
                        <div class="card" id="card-local-peq-grupo">
                            <div id="box-local-peq-grupo"> <img src="/images/grupo/<%=grupo.image%>"
                                    class="card-img" id="img-local-peq-grupo" alt="..."></div>
                            <div class="card-body">
                                <h5 class="card-title"><%=grupo.nome%></h5>
                                <p class="card-text"><b><%=grupo.usuario.pessoas.nome%></b></p>
                                <p class="card-text">Fone: <%=BrM.phone(grupo.usuario.pessoas.telefone)%></p>
                                <p class="card-text">Bairro:  <%=grupo.usuario.pessoas.bairro%></p>
                            </div>
                            <div id="botao-pai"><a href="#" class="btn btn-primary btn-card">Entrar <i class="fas fa-sign-in-alt" style="font-size:15px" aria-hidden="true"></i></a>
                            <button data-toggle="modal"  data-target="#modal-excluir-usuario" id="botao-excluir">   <a href="#" grupo = "<%=grupo.nome%>" grupoId ="<%=grupo.id%>"    class="btn-delete-grupo"><i class="far fa-trash-alt" style="font-size:15px" aria-hidden="true"></i></a> </button> 
                            </div>
                        </div>
                    </div>
                    <%  }); %> 
                    </div>
                </div>
                <!-- relat -->
                <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                    <div class="corpo-titulo"><i class='fas fa-pray' style='font-size:24px'> Relatorio</i></div>
                    <br>
                </div>
                <!-- lição -->
                <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                    <div class="corpo-titulo"><i class='fas fa-bible' style='font-size:24px'> Lições</i></div>
                    <br>
                </div>
        </article>
    </div>
    </form>
</main>
<%-include('../partials/footer-system.ejs')%>
<%-include('../partials/modal.ejs')%>
<%-include('../partials/msg.ejs')%>
<script src="/javascripts/javascripts.js"></script>
</body>
</html>